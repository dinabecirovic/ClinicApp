<Window x:Class="ClinicApp.Views.StaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Upravljanje Osobljem" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Lekari -->
        <GroupBox Grid.Row="0" Header="Lekari" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0" 
                          Margin="5"
                          ItemsSource="{Binding Doctors}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Ime" Binding="{Binding FirstName}" Width="*"/>
                        <DataGridTextColumn Header="Prezime" Binding="{Binding LastName}" Width="*"/>
                        <DataGridTextColumn Header="Specijalnost" Binding="{Binding Specialty}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                    <Label Content="Ime:"/>
                    <TextBox Width="120" Text="{Binding DoctorFirstName, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Content="Prezime:"/>
                    <TextBox Width="120" Text="{Binding DoctorLastName, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Content="Specijalnost:"/>
                    <TextBox Width="150" Text="{Binding DoctorSpecialty, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Content="Dodaj Lekara" Command="{Binding AddDoctorCommand}"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Sestre -->
        <GroupBox Grid.Row="1" Header="Medicinske Sestre" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0" 
                          Margin="5"
                          ItemsSource="{Binding Nurses}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Ime" Binding="{Binding FirstName}" Width="*"/>
                        <DataGridTextColumn Header="Prezime" Binding="{Binding LastName}" Width="*"/>
                        <DataGridTextColumn Header="Smena" Binding="{Binding Shift}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                    <Label Content="Ime:"/>
                    <TextBox Width="120" Text="{Binding NurseFirstName, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Content="Prezime:"/>
                    <TextBox Width="120" Text="{Binding NurseLastName, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Content="Smena:"/>
                    <TextBox Width="150" Text="{Binding NurseShift, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Content="Dodaj Sestru" Command="{Binding AddNurseCommand}"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>