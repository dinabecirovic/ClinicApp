<Window x:Class="ClinicApp.Views.MedicalRecordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medicinski Kartoni" 
        Height="650" 
        Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Izbor pacijenta -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Label Content="Izaberite Pacijenta:"/>
            <ComboBox Width="300" 
                      DisplayMemberPath="FullName"
                      ItemsSource="{Binding Patients}"
                      SelectedItem="{Binding SelectedPatient, Mode=TwoWay}"/>
        </StackPanel>

        <!-- DataGrid za kartone -->
        <DataGrid Grid.Row="1" 
                  Margin="10"
                  ItemsSource="{Binding MedicalRecords}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Datum" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="120"/>
                <DataGridTextColumn Header="Dijagnoza" Binding="{Binding Diagnosis}" Width="*"/>
                <DataGridTextColumn Header="Tretman" Binding="{Binding Treatment}" Width="*"/>
                <DataGridTextColumn Header="Napomene" Binding="{Binding Notes}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Forma za dodavanje kartona -->
        <GroupBox Grid.Row="2" Header="Dodaj Medicinski Karton" Margin="10" Padding="10">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Dijagnoza:" Width="100"/>
                    <TextBox Width="250" Text="{Binding Diagnosis, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Content="Tretman:" Width="100"/>
                    <TextBox Width="250" Text="{Binding Treatment, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Napomene:" Width="100"/>
                    <TextBox Width="620" Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Dodaj Karton" Command="{Binding AddRecordCommand}"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>